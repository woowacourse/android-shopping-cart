<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.cart.ShoppingCartViewModel" />

        <variable
            name="shoppingCartActionHandler"
            type="woowacourse.shopping.view.cart.ShoppingCartActionHandler" />

        <variable
            name="navigationActionHandler"
            type="woowacourse.shopping.view.cart.NavigationActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true">

        <View
            android:id="@+id/vw_cart_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gray_5"
            app:layout_constraintBottom_toTopOf="@id/rv_shopping_cart"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:background="@android:color/transparent"
            android:onClick="@{() -> navigationActionHandler.onBackButtonClicked()}"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="@id/vw_cart_top_bar"
            app:layout_constraintStart_toStartOf="@id/vw_cart_top_bar"
            app:layout_constraintTop_toTopOf="@id/vw_cart_top_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@string/shopping_cart_page_title_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="18dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/paging_buttons"
            app:layout_constraintTop_toBottomOf="@id/vw_cart_top_bar"
            tools:context=".view.cart.ShoppingCartFragment"
            tools:itemCount="3"
            tools:listitem="@layout/item_shopping_cart" />

        <LinearLayout
            android:id="@+id/paging_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isPrevButtonActivated || viewModel.isNextButtonActivated ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_shopping_cart">

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@{viewModel.isPrevButtonActivated ? @color/primary : @color/gray}"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:onClick="@{() -> shoppingCartActionHandler.onPreviousPageButtonClicked()}"
                android:padding="0dp"
                android:src="@drawable/ic_arrow_back_24" />

            <TextView
                android:id="@+id/tv_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@{String.valueOf(viewModel.currentPage)}"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="1" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@{viewModel.isNextButtonActivated ? @color/primary : @color/gray}"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:onClick="@{() -> shoppingCartActionHandler.onNextPageButtonClicked()}"
                android:padding="0dp"
                android:src="@drawable/ic_arrow_forward_24" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
