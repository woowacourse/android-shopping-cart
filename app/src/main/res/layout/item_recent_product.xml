<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="recentProduct"
            type="woowacourse.shopping.domain.model.RecentProduct" />

        <variable
            name="onClickProduct"
            type="woowacourse.shopping.presentation.ui.shopping.ShoppingEventHandler" />
    </data>

    <LinearLayout
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onClickProduct.onProductClick(recentProduct.productId)}"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <ImageView
            app:imageUrl="@{recentProduct.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="98dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="4dp"
            android:paddingTop="7dp"
            android:text="@{recentProduct.productName}"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="PET보틀" />
    </LinearLayout>
</layout>
