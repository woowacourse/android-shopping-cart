<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cartAction"
            type="woowacourse.shopping.presentation.cart.CartAction" />

        <variable
            name="cartProduct"
            type="woowacourse.shopping.presentation.cart.CartProductUi" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_retangular_4"
            android:paddingHorizontal="12dp"
            android:paddingVertical="18dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_cart_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{cartProduct.product.name}"
                android:textAppearance="@style/H2"
                app:layout_constraintEnd_toStartOf="@id/iv_cart_item_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="오둥이 스위트콘" />

            <ImageView
                android:id="@+id/iv_cart_item_delete"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_cart_product_image"
                imageUrl="@{cartProduct.product.imageUrl}"
                android:layout_width="136dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_product_title"
                tools:background="@color/black" />

            <TextView
                android:id="@+id/tv_cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/price_format(cartProduct.product.totalPrice())}"
                android:textAppearance="@style/B2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="30_000원" />

            <include
                bind:countHandler="@{cartAction}"
                android:id="@+id/item_product_count"
                layout="@layout/item_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_cart_product_price"
                app:layout_constraintEnd_toEndOf="parent"
                bind:product="@{cartProduct.product}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
