<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.view.cart.vm.CartViewModel" />

        <variable
            name="adapter"
            type="woowacourse.shopping.view.cart.adatper.CartAdapter" />

        <variable
            name="eventHandler"
            type="woowacourse.shopping.view.cart.CartScreenEventHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="18dp"
        android:paddingTop="24dp"
        tools:context=".view.cart.CartActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adapter="@{adapter}"
            android:layout_marginBottom="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pager"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_previous"
            android:onClick="@{() -> eventHandler.onClickPreviousPage()}"
            android:background="@drawable/previous_button_shape"
            android:inset="0dp"/>

        <TextView
            android:id="@+id/text_view_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/gray"
            android:text="@{String.valueOf(vm.pageNo)}"
            android:padding="11dp" />

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_forward"
            android:onClick="@{() -> eventHandler.onClickNextPage()}"
            android:background="@drawable/forward_button_shape"
            android:inset="0dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
