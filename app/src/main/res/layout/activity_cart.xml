<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.viewmodel.cart.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.products.ProductsActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:padding="2dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/ll_cart_page"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_cart_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="62dp"
            android:gravity="center"
            app:isGone="@{viewModel.maxPage &lt;= viewModel.INITIAL_PAGE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/selector_cart_previous"
                android:clickable="true"
                android:enabled="@{viewModel.currentPage != viewModel.INITIAL_PAGE}"
                android:onClick="@{()->viewModel.decreasePage(viewModel.DEFAULT_PAGE_STEP)}"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/cart_page_previous"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_page"
                app:layout_constraintEnd_toStartOf="@+id/tv_cart_page"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_page" />

            <TextView
                android:id="@+id/tv_cart_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewModel.currentPage)}"
                android:textColor="@color/gray_5"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_cart_next"
                android:clickable="true"
                android:enabled="@{viewModel.currentPage != viewModel.maxPage}"
                android:onClick="@{()->viewModel.increasePage(viewModel.DEFAULT_PAGE_STEP)}"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/cart_page_next"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_page"
                app:layout_constraintStart_toEndOf="@+id/tv_cart_page"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_page" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
