<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:count="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="countHandler"
            type="woowacourse.shopping.presentation.base.CountHandler" />

        <variable
            name="product"
            type="woowacourse.shopping.presentation.shopping.product.ShoppingUiModel.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:onClick="@{() -> countHandler.onPlus(product)}"
            android:id="@+id/btn_product_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_oval"
            android:src="@drawable/ic_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_count"
            app:layout_constraintTop_toTopOf="parent"
            count:isVisible="@{!product.visible}" />

        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:onClick="@{() -> countHandler.onMinus(product)}"
            android:padding="11dp"
            android:src="@drawable/ic_minus_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            count:isVisible="@{product.visible}" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="11dp"
            android:text="@{String.valueOf(product.count)}"
            android:textAppearance="@style/B1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/btn_plus"
            app:layout_constraintStart_toEndOf="@id/btn_minus"
            app:layout_constraintTop_toTopOf="parent"
            count:isVisible="@{product.visible}" />

        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:onClick="@{() -> countHandler.onPlus(product)}"
            android:padding="11dp"
            android:src="@drawable/ic_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_count"
            app:layout_constraintTop_toTopOf="parent"
            count:isVisible="@{product.visible}" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
