<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isVisible"
            type="Boolean" />

        <variable
            name="productActionListener"
            type="woowacourse.shopping.view.products.ProductActionListener" />

        <variable
            name="loadPagingDataListener"
            type="woowacourse.shopping.view.products.LoadPagingDataListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <View
            android:id="@+id/vw_product_list_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gray_5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="@string/product_list_page_title_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/vw_product_list_top_bar"
            app:layout_constraintStart_toStartOf="@id/vw_product_list_top_bar"
            app:layout_constraintTop_toTopOf="@id/vw_product_list_top_bar" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:onClick="@{()->productActionListener.clickShoppingCart()}"
            android:src="@drawable/ic_cart"
            app:layout_constraintBottom_toBottomOf="@id/vw_product_list_top_bar"
            app:layout_constraintEnd_toEndOf="@id/vw_product_list_top_bar"
            app:layout_constraintTop_toTopOf="@id/vw_product_list_top_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/btn_more_product"
            app:layout_constraintTop_toBottomOf="@id/vw_product_list_top_bar"
            app:spanCount="2"
            tools:listitem="@layout/item_product" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_more_product"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@color/primary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="@{()->loadPagingDataListener.clickLoadPagingData()}"
            android:text="@string/product_list_more_data_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="@{isVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_products" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
