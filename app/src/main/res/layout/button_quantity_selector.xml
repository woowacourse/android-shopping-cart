<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="quantity"
            type="androidx.lifecycle.MutableLiveData&lt;java.lang.Integer&gt;" />
        <variable
            name="onQuantityMinusSelected"
            type="kotlin.jvm.functions.Function1&lt;androidx.lifecycle.MutableLiveData&lt;java.lang.Integer&gt;, kotlin.Unit&gt;" />
        <variable
            name="onQuantityPlusSelected"
            type="kotlin.jvm.functions.Function1&lt;androidx.lifecycle.MutableLiveData&lt;java.lang.Integer&gt;, kotlin.Unit&gt;" />

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:shoppingCart="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/btn_quantity_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quantity_selector_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:onClick="@{()->onQuantityMinusSelected.invoke(quantity)}"
            android:id="@+id/button_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/quantity_minus"
            android:textColor="#555555"
            android:textSize="24sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:minWidth="24dp"
            android:textColor="#555555"
            android:textSize="24sp"
            shoppingCart:quantity="@{quantity}"
            tools:text="2" />

        <Button
            android:onClick="@{()->onQuantityPlusSelected.invoke(quantity)}"
            android:id="@+id/button_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/quantity_plus"
            android:textColor="#555555"
            android:textSize="24sp"
            app:backgroundTint="@null" />

    </LinearLayout>
</layout>
