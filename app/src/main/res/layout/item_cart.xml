<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shopping="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartItemDeleteClickListener"
            type="woowacourse.shopping.presentation.cart.CartItemEventListener" />

        <variable
            name="quantityListener"
            type="woowacourse.shopping.presentation.home.QuantityListener" />

        <variable
            name="cartedProduct"
            type="woowacourse.shopping.data.model.cart.CartedProduct" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/gray_500"
        app:strokeWidth="1dp"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/tv_product_title_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_500"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_delete"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="12dp"
                tools:text="오이"
                android:text="@{cartedProduct.product.name}"/>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_exit"
                app:layout_constraintTop_toTopOf="@id/tv_product_title_detail"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="6dp"
                app:tint="@color/gray_500"
                android:onClick="@{() -> cartItemDeleteClickListener.onCartItemDelete(cartedProduct)}"
                android:contentDescription="@string/description_delete_cart_item" />

            <ImageView
                android:id="@+id/iv_product_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_thumbnail"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,2:1"
                app:layout_constraintEnd_toStartOf="@id/tv_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_title_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="26dp"
                shopping:productThumbnail="@{cartedProduct.product.imageSource}"
                tools:src="@drawable/ic_launcher_background" />

            <include
                layout="@layout/layout_quantity_manipulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_price"
                shopping:productId="@{cartedProduct.product.id}"
                shopping:quantity="@{cartedProduct.cartItem.quantity}"
                shopping:quantityListener="@{quantityListener}" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toEndOf="@id/iv_product_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="10,000원"
                android:text="@{@string/format_price(cartedProduct.product.price)}"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
