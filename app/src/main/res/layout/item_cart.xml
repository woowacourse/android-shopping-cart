<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartItemUiModel"
            type="woowacourse.shopping.uimodel.CartItemUiModel" />

        <variable
            name="clickListener"
            type="woowacourse.shopping.shoppingcart.ShoppingCartClickAction" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/rect_gray500_line_1">

        <TextView
            android:id="@+id/tv_item_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@{cartItemUiModel.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_cart_product"
            app:loadImage="@{cartItemUiModel.imageUrl}"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_item_cart_name"
            app:layout_constraintTop_toBottomOf="@id/tv_item_cart_name"
            tools:src="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/ib_cart_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:onClickListener="@{()->clickListener.onItemRemoveBtnClicked(cartItemUiModel.id)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray_300" />

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray_500"
            app:formattedPrice="@{cartItemUiModel.totalPrice}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="99,800원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
