<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.ui.products.adapter.type.ProductUiModel" />

        <variable
            name="listener"
            type="woowacourse.shopping.ui.cart.CartListener" />

        <variable
            name="quantityListener"
            type="woowacourse.shopping.ui.utils.AddQuantityListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_border_4">

        <TextView
            android:id="@+id/tv_cart_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.title}"
            android:textColor="@color/gray_500"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_cart_exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_cart_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> listener.onClickExitCartItem(product.productId)}"
            android:padding="20dp"
            android:src="@drawable/ic_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray_200" />

        <include
            android:id="@+id/btn_add_cart_quantity"
            layout="@layout/button_add_cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_product_price"
            app:layout_constraintEnd_toEndOf="@id/iv_cart_exit"
            app:layout_constraintTop_toBottomOf="@id/iv_cart_exit"
            app:listener="@{quantityListener}"
            app:quantity="@{product.quantity}" />

        <ImageView
            android:id="@+id/iv_cart_product"
            android:layout_width="136dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toStartOf="@id/tv_cart_product_title"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_product_title" />

        <TextView
            android:id="@+id/tv_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="@{@string/product_price(product.totalPrice())}"
            android:textColor="@color/gray_500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_cart_exit"
            tools:text="99,800원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
