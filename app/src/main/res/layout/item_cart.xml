<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartItem"
            type="woowacourse.shopping.model.CartItem" />

        <variable
            name="quantityControlListener"
            type="woowacourse.shopping.common.QuantityControlListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_cart_item">

        <TextView
            android:id="@+id/tv_cart_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartItem.product.title}"
            android:textColor="@color/gray_500"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_cart_exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_cart_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="16dp"
            android:src="@drawable/ic_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray_200" />

        <ImageView
            android:id="@+id/iv_cart_product"
            android:layout_width="136dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            app:imageUrl="@{cartItem.product.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toStartOf="@id/tv_cart_product_title"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_product_title" />

        <include
            android:id="@+id/include_quantity_control"
            layout="@layout/button_quantity_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_product_price"
            app:layout_constraintEnd_toEndOf="parent"
            bind:quantity="@{cartItem.quantity}"
            bind:quantityControlListener="@{quantityControlListener}" />

        <TextView
            android:id="@+id/tv_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/product_price(cartItem.quantity.calculate(cartItem.product.price))}"
            android:textColor="@color/gray_500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_cart_product"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="99,800원" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
