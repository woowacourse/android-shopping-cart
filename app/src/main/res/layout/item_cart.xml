<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cartProduct"
            type="woowacourse.shopping.domain.CartProduct"/>
        <variable
            name="cartActionHandler"
            type="woowacourse.shopping.presentation.ui.cart.CartActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_cart"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:src="@drawable/ic_close_white"
            cartImgUrl="@{cartProduct.imgUrl}"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/ic_close_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:onClick="@{() -> cartActionHandler.onDelete(cartProduct)}"/>

        <include
            android:id="@+id/layout_counter"
            layout="@layout/selector_quantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_price"
            app:cartProduct="@{cartProduct}"
            app:shoppingActionHandler="@{cartActionHandler}"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            tools:text="000원"
            productPrice="@{cartProduct}"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="상품 제목"
            android:text="@{cartProduct.name}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
