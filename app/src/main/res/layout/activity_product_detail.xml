<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="woowacourse.shopping.presentation.ui.productdetail.ProductDetailViewModel" />
        <variable
            name="actionHandler"
            type="woowacourse.shopping.presentation.ui.productdetail.ProductDetailActionHandler"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.productdetail.ProductDetailActivity">

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="centerCrop"
            urlToImage="@{vm.product.imageUrl}"
            tools:src="@drawable/img_dummy_product_thumbnail"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@{vm.product.name}"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="동원 스위트 콘"
            />

        <View
            android:id="@+id/product_detail_divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray6"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:priceToCurrency="@{vm.price}"
            tools:text="99,800원"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_divide_line" />

        <include
            layout="@layout/holder_counter"
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="8dp"
            app:count="@{vm.quantity}"
            app:layout_constraintTop_toBottomOf="@id/product_detail_divide_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:minusCount="@{() -> actionHandler.onClickMinusOrderButton()}"
            app:plusCount="@{() -> actionHandler.onClickPlusOrderButton()}"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="29dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_price"
            hideIfRecentHistory="@{vm.mostRecentHistory}"
            hideIfRecentProduct="@{vm.product}"
            android:onClick="@{() -> actionHandler.onClickRecentHistory()}"
            android:background="@drawable/bg_white_outline_radius_4"
            >
            <TextView
                android:id="@+id/tv_last_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마지막으로 본 상품"
                android:textSize="12dp"
                android:textColor="@color/teal_200"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:text="@{vm.mostRecentHistory.product.name}"
                app:layout_constraintTop_toBottomOf="@id/tv_last_history_title"
                app:layout_constraintStart_toStartOf="@id/tv_last_history_title"
                tools:text = "홍차"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green"
            android:text="장바구니 담기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:onClick="@{()-> vm.onAddToCartButtonClick()}"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
