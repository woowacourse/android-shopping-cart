<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="woowacourse.shopping.view.main.ProductsViewModel" />
        <variable
            name="onLoadMoreProducts"
            type="kotlin.jvm.functions.Function1&lt;java.lang.Integer, kotlin.Unit&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.MainActivityTemplate">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/tv_recent_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_recent_item"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="최근 본 상품"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_product_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"

            tools:listitem="@layout/item_recent_product" />

        <View
            app:layout_constraintTop_toBottomOf="@id/recent_product_list"

            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:visibility="visible" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_load_more_products"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_divider"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_product" />

        <Button
            android:id="@+id/btn_load_more_products"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/pagination_enabled"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{()->onLoadMoreProducts.invoke(viewModel.productsLiveData.page.currentPage + 1)}"
            android:text="@string/button_text_load_more"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
