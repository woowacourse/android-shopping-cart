<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    android:paddingBottom="12dp">


    <ImageView
        android:id="@+id/iv_item_goods_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/goods_image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_item_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/iv_item_goods_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_goods_thumbnail"
        tools:text="PET보틀-정사각형-매우긴이름매우긴이름매우긴이름" />

    <TextView
        android:id="@+id/tv_item_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_800"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_goods_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_goods_name"
        tools:text="10,000원" />

</androidx.constraintlayout.widget.ConstraintLayout>