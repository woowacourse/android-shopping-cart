<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.detail.ProductDetailViewModel" />

        <variable
            name="detailActionHandler"
            type="woowacourse.shopping.view.detail.DetailActionHandler" />

        <variable
            name="countActionHandler"
            type="woowacourse.shopping.view.CountActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".view.detail.ProductDetailFragment">

        <View
            android:id="@+id/vw_detail_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gray_5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/top_bar_margin_end"
            android:background="@android:color/transparent"
            android:onClick="@{() -> detailActionHandler.onCloseButtonClicked()}"
            android:src="@drawable/ic_close_24"
            app:layout_constraintBottom_toBottomOf="@id/vw_detail_top_bar"
            app:layout_constraintEnd_toEndOf="@id/vw_detail_top_bar"
            app:layout_constraintTop_toTopOf="@id/vw_detail_top_bar"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_detail"
            imageUrl="@{viewModel.product.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_detail_top_bar" />

        <TextView
            android:id="@+id/tv_detail_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/detail_content_horizontal_margin"
            android:layout_marginTop="16dp"
            android:text="@{viewModel.product.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_detail"
            tools:text="상품 이름" />

        <View
            android:id="@+id/vw_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="18dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_product_name" />

        <TextView
            android:id="@+id/tv_detail_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/detail_content_horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="@{@string/formatted_price(viewModel.totalPrice)}"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/count_view"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_divider"
            tools:text="10,000원" />

        <include
            android:id="@+id/count_view"
            layout="@layout/count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/detail_content_horizontal_margin"
            app:count="@{viewModel.quantity}"
            app:countActionHandler="@{countActionHandler}"
            app:layout_constraintBottom_toBottomOf="@id/tv_detail_product_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_detail_product_price"
            app:layout_constraintTop_toTopOf="@id/tv_detail_product_price"
            app:product="@{viewModel.product}" />

        <View
            android:id="@+id/vw_recent_product_background"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/shape_rounded_border"
            app:layout_constraintBottom_toTopOf="@id/btn_add_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_product_price"
            app:layout_constraintVertical_bias="0.523" />

        <TextView
            android:id="@+id/tv_recent_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/detail_recent_product_title"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/tv_recent_product_info"
            app:layout_constraintEnd_toEndOf="@id/vw_recent_product_background"
            app:layout_constraintStart_toStartOf="@id/vw_recent_product_background"
            app:layout_constraintTop_toTopOf="@id/vw_recent_product_background" />

        <TextView
            android:id="@+id/tv_recent_product_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@id/vw_recent_product_background"
            app:layout_constraintEnd_toEndOf="@id/tv_recent_product_title"
            app:layout_constraintStart_toStartOf="@id/tv_recent_product_title"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_product_title"
            tools:text="상품 이름" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_cart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/primary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="@{()->detailActionHandler.onAddCartButtonClicked()}"
            android:padding="0dp"
            android:text="@string/add_cart_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
