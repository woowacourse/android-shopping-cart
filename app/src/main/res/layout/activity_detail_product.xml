<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.domain.Product" />

        <variable
            name="toExit"
            type="kotlin.jvm.functions.Function0" />

        <variable
            name="toCart"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_detail_product"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray5"
            app:layout_constraintBottom_toTopOf="@id/iv_product_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_exit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray5"
            android:contentDescription="@string/detail_product_ic_exit"
            android:onClick="@{() -> toExit.invoke()}"
            android:src="@drawable/ic_exit"
            app:layout_constraintBottom_toBottomOf="@id/tb_detail_product"
            app:layout_constraintEnd_toEndOf="@id/tb_detail_product"
            app:layout_constraintTop_toTopOf="@id/tb_detail_product" />

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/tb_detail_product"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_detail_name"
            style="@style/ProductDetailTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.name}"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="맥심 모카골드 마일드" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            app:dividerColor="@color/gray1"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_name" />

        <TextView
            android:id="@+id/tv_product_detail_price_text"
            style="@style/ProductDetailPriceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/detail_product_price_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/tv_product_detail_price"
            style="@style/ProductDetailPriceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:text="@{@string/detail_product_price(product.price)}"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_detail_price_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_product_detail_price_text"
            tools:text="99,800원" />

        <Button
            android:id="@+id/btn_product_detail_add_cart"
            style="@style/ProductDetailCartStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/cyan"
            android:onClick="@{() -> toCart.invoke()}"
            android:text="@string/detail_product_add_cart"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
