<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shopping="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="detailViewModel"
            type="woowacourse.shopping.presentation.detail.viewmodel.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.detail.DetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_detail"
            shopping:productThumbnail="@{detailViewModel.productInformation.imageSource}"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{detailViewModel.productInformation.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="오이오이오이오이오이오이오이오이오이오이오이오이오이오이" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_detail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title_detail" />

        <TextView
            android:id="@+id/tv_price_value_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/format_price(detailViewModel.productInformation.price * detailViewModel.quantity)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_title_detail"
            app:layout_constraintTop_toBottomOf="@id/div_detail"
            tools:text="10,000원" />

        <include
            layout="@layout/layout_plus_minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:padding="12dp"
            app:cartItemCountHandler="@{detailViewModel}"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_value_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_price_value_detail"
            app:productId="@{detailViewModel.productInformation.id}"
            app:quantity="@{detailViewModel.quantity}" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_last_watch_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="29dp"
            android:onClick="@{() -> detailViewModel.moveToDetail(detailViewModel.recentProductHistory.id)}"
            android:visibility="@{detailViewModel.showRecent ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tv_price_value_detail"
            app:strokeColor="@color/gray_500"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_last_watch_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/detail_recent_product"
                    android:textColor="@color/mint_900"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="18dp"
                    android:text="@{detailViewModel.recentProductHistory.name}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_last_watch_product"
                    app:layout_constraintTop_toBottomOf="@id/tv_last_watch_product"
                    tools:text="PET보틀-정사각형(500ml)" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_to_cart_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint_900"
            android:onClick="@{() -> detailViewModel.addToCart(detailViewModel.productInformation.id, detailViewModel.quantity)}"
            android:text="@string/detail_add_to_cart_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
