<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shopping="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="detailViewModel"
            type="woowacourse.shopping.presentation.detail.DetailViewModel" />

        <variable
            name="quantityListener"
            type="woowacourse.shopping.presentation.home.QuantityListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.detail.DetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar_detail"
            shopping:productThumbnail="@{detailViewModel.productInformation.product.imageSource}"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{detailViewModel.productInformation.product.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="오이오이오이오이오이오이오이오이오이오이오이오이오이오이" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_detail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title_detail" />

        <TextView
            android:id="@+id/tv_price_value_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{@string/format_price(detailViewModel.productInformation.product.price * detailViewModel.productInformation.cartItem.quantity)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_title_detail"
            app:layout_constraintTop_toBottomOf="@id/div_detail"
            tools:text="10,000원" />

        <include
            layout="@layout/layout_quantity_manipulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/div_detail"
            shopping:productId="@{detailViewModel.productInformation.product.id}"
            shopping:quantity="@{detailViewModel.productInformation.quantity}"
            shopping:quantityListener="@{quantityListener}" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            shopping:lastProductAvailability="@{detailViewModel.lastlyViewedProduct}"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_value_detail"
            app:strokeColor="@color/gray_500"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> detailViewModel.navigateToProductDetail(detailViewModel.lastlyViewedProduct.product.id)}"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_last_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/detail_lastly_viewed_product"
                    android:textColor="@color/mint_900"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_last_product_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{detailViewModel.lastlyViewedProduct.product.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_last_header" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_to_cart_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint_900"
            android:onClick="@{() -> detailViewModel.addToCart(detailViewModel.productInformation.product.id)}"
            android:text="@string/detail_add_to_cart_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
