<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="woowacourse.shopping.listener.OnClickCartItemCounter" />

        <variable
            name="cartItem"
            type="woowacourse.shopping.model.CartItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_detail_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> listener.decreaseQuantity(cartItem)}"
            android:text="-"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/product_detail_product_count"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityByQuantity="@{cartItem.quantity}"
            tools:text="-" />

        <TextView
            android:id="@+id/product_detail_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_marginEnd="18dp"
            android:text="@{String.valueOf(cartItem.quantity)}"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/product_detail_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityByQuantity="@{cartItem.quantity}"
            tools:text="1" />

        <TextView
            android:id="@+id/product_detail_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:onClick="@{() -> listener.increaseQuantity(cartItem)}"
            android:text="+"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityByQuantity="@{cartItem.quantity}"
            tools:text="+" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
