<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartItem"
            type="woowacourse.shopping.domain.model.CartItem" />

        <variable
            name="shoppingCartActionHandler"
            type="woowacourse.shopping.view.cart.ShoppingCartActionHandler" />

        <variable
            name="countActionHandler"
            type="woowacourse.shopping.view.CountActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_border"
        android:onClick="@{() -> shoppingCartActionHandler.onCartItemClicked(cartItem.product.id)}">

        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartItem.product.name}"
            android:textColor="@color/gray_5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/iv_cart_item_image"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="PET-보틀" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:onClick="@{() -> shoppingCartActionHandler.onRemoveCartItemButtonClicked(cartItem)}"
            android:src="@drawable/ic_close_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_cart_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_cart_item_name" />

        <ImageView
            android:id="@+id/iv_cart_item_image"
            imageUrl="@{cartItem.product.imageUrl}"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_item_name"
            tools:src="@drawable/ic_launcher_background" />

        <include
            android:id="@+id/count_view"
            layout="@layout/count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:product="@{cartItem.product}"
            app:count="@{cartItem.quantity}"
            app:countActionHandler="@{countActionHandler}"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_item_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_cart_item_image"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/tv_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/formatted_price(cartItem.price)}"
            android:textColor="@color/gray_5"
            app:layout_constraintBottom_toBottomOf="@id/iv_cart_item_image"
            app:layout_constraintEnd_toEndOf="@id/count_view"
            app:layout_constraintTop_toBottomOf="@id/count_view"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
