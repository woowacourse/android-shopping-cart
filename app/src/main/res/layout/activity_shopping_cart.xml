<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shopping_cart_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="100dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/item_shopping_cart_product" />

        <Button
            android:id="@+id/tv_pagination_left"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="50dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#04c09e"

            app:layout_constraintTop_toBottomOf="@+id/rv_shopping_cart_list"
            app:layout_constraintEnd_toStartOf="@id/tv_pagination_number"
            android:text="@string/pagination_left"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <TextView
            android:id="@+id/tv_pagination_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_pagination_left"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#555555"
            tools:text="1"
            />

        <Button
            android:id="@+id/tv_pagination_right"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="@+id/tv_pagination_left"
            app:layout_constraintStart_toEndOf="@+id/tv_pagination_number"
            android:text="@string/pagination_right"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#04c09e"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
