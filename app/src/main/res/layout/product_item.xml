<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productClickListener"
            type="woowacourse.shopping.ui.productlist.ProductClickListener" />

        <variable
            name="product"
            type="woowacourse.shopping.domain.product.Product" />

        <variable
            name="priceFormatter"
            type="woowacourse.shopping.utils.PriceFormatter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> productClickListener.onClick(product)}"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:contentDescription="@string/product_description"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setImageWithGlide="@{product.imageUrl}"
            tools:src="@drawable/pants1" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="@{product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image"
            tools:text="바지" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@{@string/price(priceFormatter.format(product.price))}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
