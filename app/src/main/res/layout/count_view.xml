<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="product"
            type="woowacourse.shopping.domain.model.Product" />

        <variable
            name="count"
            type="Integer" />

        <variable
            name="countActionHandler"
            type="woowacourse.shopping.view.CountActionHandler" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:onClick="@{() -> countActionHandler.onDecreaseQuantityButtonClicked(product)}"
            android:src="@drawable/ic_sub"
            app:visibility="@{count}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:text="@{String.valueOf(count)}"
            android:textSize="22sp"
            android:textStyle="bold"
            app:visibility="@{count}"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:onClick="@{() -> countActionHandler.onIncreaseQuantityButtonClicked(product)}"
            android:src="@drawable/ic_add" />

    </LinearLayout>
</layout>
