<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shopping="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="cartableProduct"
            type="woowacourse.shopping.data.model.CartableProduct" />

        <variable
            name="homeItemClickListener"
            type="woowacourse.shopping.presentation.home.HomeItemEventListener" />

        <variable
            name="quantityListener"
            type="woowacourse.shopping.presentation.home.QuantityListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> homeItemClickListener.navigateToProductDetail(cartableProduct.product.id)}"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            shopping:productThumbnail="@{cartableProduct.product.imageSource}"
            tools:src="@drawable/ic_launcher_background" />

        <include
            layout="@layout/layout_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="@{cartableProduct.quantity == 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_detail"
            app:layout_constraintEnd_toEndOf="@id/iv_product_detail"
            shopping:cartableProduct="@{cartableProduct}"
            shopping:quantityListener="@{quantityListener}" />

        <include
            layout="@layout/layout_quantity_manipulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_detail"
            app:layout_constraintEnd_toEndOf="@id/iv_product_detail"
            android:visibility="@{cartableProduct.quantity > 0 ? View.VISIBLE : View.GONE}"
            shopping:cartableProduct="@{cartableProduct}"
            shopping:quantityListener="@{quantityListener}" />

        <TextView
            android:id="@+id/tv_product_title_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartableProduct.product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이오이" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/format_price(cartableProduct.product.price)}"
            android:textColor="@color/gray_500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_product_title_detail"
            app:layout_constraintStart_toStartOf="@id/tv_product_title_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title_detail"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
