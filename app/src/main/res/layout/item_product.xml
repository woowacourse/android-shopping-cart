<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.model.Product" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.ui.products.ProductContentsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:scaleType="fitStart"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="139dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_product_image"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image"
            tools:text="PET보틀- 정사각형" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="@{@string/product_price(product.price)}"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            tools:text="10,000원" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="68dp"
            android:onClick="@{()->viewModel.onItemPlusButtonClick(product.id)}"
            android:src="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:setVisibleByCondition="@{viewModel.isItemPlusButtonVisible[product.id]}" />

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="68dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:setVisibleByCondition="@{!(viewModel.isItemPlusButtonVisible[product.id])}">

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="@{()->viewModel.onItemDecreaseButtonClick(product.id)}"/>

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{Integer.toString(viewModel.itemCount[product.id])}"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="@{()->viewModel.onItemIncreaseButtonClick(product.id)}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
