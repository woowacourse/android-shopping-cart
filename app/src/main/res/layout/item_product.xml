<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="woowacourse.shopping.model.Product" />

        <variable
            name="cartItemQuantity"
            type="woowacourse.shopping.model.CartItemQuantity" />

        <variable
            name="quantityControlListener"
            type="woowacourse.shopping.common.QuantityControlListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_title"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_default_product" />

        <ImageButton
            android:id="@+id/btn_product_add_to_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/ic_oval_plus"
            android:onClick="@{() -> quantityControlListener.addProduct()}"
            app:layout_constraintBottom_toBottomOf="@id/include_quantity_control"
            app:layout_constraintEnd_toEndOf="parent"
            bind:isVisible="@{cartItemQuantity.quantity.count == 0}" />

        <include
            android:id="@+id/include_quantity_control"
            layout="@layout/button_quantity_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:isVisible="@{cartItemQuantity.quantity.count != 0}"
            bind:quantity="@{cartItemQuantity.quantity}"
            bind:quantityControlListener="@{quantityControlListener}"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.title}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            tools:text="PET보틀-정사각형(500ml)" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/product_price(product.price)}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_title"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
