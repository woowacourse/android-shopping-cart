<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.ui.products.viewmodel.ProductContentsViewModel" />

        <variable
            name="productItemClickListener"
            type="woowacourse.shopping.ui.products.ProductItemClickListener" />

        <variable
            name="productWithQuantity"
            type="woowacourse.shopping.model.ProductWithQuantity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:animateLayoutChanges="true"
        android:onClick="@{() -> vm.itemClickListener(productWithQuantity.product.id)}">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:scaleType="fitXY"
            app:imageUrl="@{productWithQuantity.product.imageUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <include
            android:id="@+id/layout_count_selection"
            layout="@layout/layout_product_count_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="8dp"
            app:isVisible="@{productWithQuantity.quantity.value != 0}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_image"
            app:layout_constraintStart_toStartOf="@id/iv_product_image"
            bind:count="@{String.valueOf(productWithQuantity.quantity.value)}"
            bind:productId = "@{productWithQuantity.product.id}"
            bind:countButtonClickListener="@{vm}" />

        <ImageView
            android:id="@+id/btn_start_add_product"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/start_add_product"
            android:onClick="@{() -> vm.plusCount(productWithQuantity.product.id)}"
            android:src="@drawable/ic_plus"
            app:isVisible="@{productWithQuantity.quantity.value == 0}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_image"
            app:layout_constraintEnd_toEndOf="@id/iv_product_image" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="139dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{productWithQuantity.product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_product_image"
            app:layout_constraintTop_toBottomOf="@id/iv_product_image"
            tools:text="PET보틀- 정사각형" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{@string/product_price(productWithQuantity.product.price)}"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
