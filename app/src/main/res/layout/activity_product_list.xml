<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="woowacourse.shopping.productlist.ProductListViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_product_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_700"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Shopping"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/tv_product_list_cart_item_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginStart="2dp"
                android:background="@drawable/oval_emerald_fill"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@{String.valueOf(vm.totalCartItemCount)}"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="@{ vm.totalCartItemCount == 0 ? View.GONE: View.VISIBLE}"
                tools:text="2" />

            <ImageButton
                android:id="@+id/ib_product_list_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shopping_cart" />


        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_product_list"
            tools:context=".productlist.ProductListActivity"
            tools:ignore="ScrollViewCount">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_product_list_recent_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="최근 본 상품"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="@{vm.recentProducts.isEmpty() ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_product_list_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rect_gray100_line_bot3"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingBottom="40dp"
                    android:visibility="@{vm.recentProducts.isEmpty() ? View.GONE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_list_recent_message"
                    tools:listitem="@layout/item_recent_product" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_product_list_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/btn_load_more_products"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcv_product_list_recent"
                    app:spanCount="2"
                    tools:listitem="@layout/item_product_list" />

                <Button
                    android:id="@+id/btn_load_more_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> vm.loadMoreProducts()}"
                    android:text="@string/product_list_load_more_products"
                    android:visibility="@{vm.productUiState.currentProducts.size == vm.totalSize ? View.GONE: View.VISIBLE }"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcv_product_list_main" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
