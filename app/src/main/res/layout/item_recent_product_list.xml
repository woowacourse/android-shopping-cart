<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:id="@+id/tv_recent_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_recent_item"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="최근 본 상품"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_product_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_item"
            app:layout_constraintStart_toStartOf="parent"

            tools:listitem="@layout/item_recent_product" />

        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/recent_product_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
