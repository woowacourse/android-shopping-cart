<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
        name="quantity"
        type="androidx.lifecycle.MutableLiveData&lt;java.lang.Integer&gt;" />

        <variable
            name="handler"
            type="woowacourse.shopping.view.shoppingcart.ShoppingCartEventHandler" />
        <variable
            name="page"
            type="int" />
        <variable
            name="product"
            type="woowacourse.shopping.view.uimodel.ShoppingCartItemUiModel" />

        <variable
            name="onProductRemove"
            type="kotlin.jvm.functions.Function2&lt;woowacourse.shopping.view.uimodel.ShoppingCartItemUiModel, java.lang.Integer,kotlin.Unit&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:shoppingCart="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        shoppingCart:observe="@{quantity}"
        shoppingCart:observe_action="@{handler}"
        shoppingCart:observe_argument_item="@{product}"
        shoppingCart:observe_argument_page="@{page}"

        android:background="@drawable/background_item_shopping_cart">

        <TextView
            android:id="@+id/tv_shopping_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="28dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.productUiModel.name}"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/iv_shopping_cart_image"
            app:layout_constraintEnd_toStartOf="@id/iv_remove_item_product_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_shopping_cart_image"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginStart="12dp"
            shoppingCart:image="@{product.productUiModel.imageUrl}"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shopping_cart_item"
            tools:src="@drawable/sample_product_detail_image" />

        <ImageView
            android:onClick="@{()->handler.onProductRemove(product, page)}"
            android:id="@+id/iv_remove_item_product_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icon_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shopping_cart_item"
            app:tint="#AAAAAA" />

        <LinearLayout
            android:id="@+id/layout_product_quantity_selector"
            app:layout_constraintTop_toBottomOf="@+id/iv_remove_item_product_icon"
            app:layout_constraintBottom_toTopOf="@+id/tv_price"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >

            <include
                app:quantityObservable="@{product}"
                app:quantity="@{quantity}"
                app:handler="@{handler}"
                layout="@layout/button_quantity_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:price="@{product.productUiModel.price}"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_shopping_cart_image"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="99,800원" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
