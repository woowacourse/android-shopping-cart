<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.ui.model.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_woowa_light_gray_line_1_rect"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:layout_height="153dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="[든든] 동원 스위트콘"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/woowa_text_black"
            android:text="@{product.name}" />

        <ImageView
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_close"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:tint="@color/woowa_light_gray" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="18dp"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:layout_marginBottom="18dp"
            android:id="@+id/iv_product"
            app:image="@{product.imageUrl}"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintDimensionRatio="136:72"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/iv_close"
            app:layout_constraintBottom_toBottomOf="@+id/iv_product"
            tools:text="99,800원"
            android:textSize="16sp"
            android:text="@{@string/price_format(product.price.value)}"
            android:textColor="@color/woowa_text_black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
